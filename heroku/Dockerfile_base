FROM rocker/verse:4.2.1
RUN apt-get update -y && apt-get install -y  make pandoc zlib1g-dev libicu-dev  libxml2-dev make pandoc libicu-dev  git pandoc  libxml2-dev libssl-dev libcurl4-openssl-dev  libicu-dev  make libssl-dev libcurl4-openssl-dev zlib1g-dev  make  git libssl-dev libcurl4-openssl-dev  libcurl4-openssl-dev libssl-dev  zlib1g-dev  git pandoc libxml2-dev make libssl-dev libgit2-dev libcurl4-openssl-dev libfreetype6-dev libfribidi-dev libharfbuzz-dev libfontconfig1-dev libjpeg-dev libpng-dev libtiff-dev zlib1g-dev libicu-dev  make zlib1g-dev  git libssl-dev libgit2-dev libcurl4-openssl-dev  git  libxml2-dev make pandoc libcurl4-openssl-dev libssl-dev libnode-dev libicu-dev  make pandoc libicu-dev  libssl-dev libcurl4-openssl-dev  libglpk-dev libgmp3-dev libxml2-dev  libssl-dev  pandoc  libpng-dev make pandoc libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev libicu-dev  libpng-dev  make git pandoc libssl-dev libcurl4-openssl-dev zlib1g-dev libicu-dev  libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev  libxml2-dev libcurl4-openssl-dev libssl-dev  libssl-dev libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev libudunits2-dev  zlib1g-dev libglpk-dev libgmp3-dev libxml2-dev  libxml2-dev pandoc  libudunits2-dev  git make libssl-dev libgit2-dev libcurl4-openssl-dev  libxml2-dev && rm -rf /var/lib/apt/lists/*
RUN mkdir -p /usr/local/lib/R/etc/ /usr/lib/R/etc/
RUN echo "options(renv.config.pak.enabled = TRUE, repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" | tee /usr/local/lib/R/etc/Rprofile.site | tee /usr/lib/R/etc/Rprofile.site
RUN R -e 'install.packages(c("renv","remotes"))'
COPY renv.lock renv.lock
RUN R -e 'renv::restore()'
