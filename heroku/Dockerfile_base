FROM rocker/verse:4.2.1
RUN apt-get update -y && apt-get install -y  libicu-dev make pandoc  libicu-dev make libxml2-dev pandoc  git pandoc  libssl-dev libxml2-dev libcurl4-openssl-dev  libicu-dev  libssl-dev make zlib1g-dev libcurl4-openssl-dev  make  git libssl-dev libcurl4-openssl-dev  libcurl4-openssl-dev libssl-dev  zlib1g-dev  libfreetype6-dev libfribidi-dev libharfbuzz-dev git libfontconfig1-dev libgit2-dev pandoc libicu-dev libjpeg-dev libpng-dev libtiff-dev libssl-dev make libxml2-dev zlib1g-dev libcurl4-openssl-dev  libicu-dev make zlib1g-dev pandoc  make zlib1g-dev  git libgit2-dev libssl-dev libcurl4-openssl-dev  git  libicu-dev libnode-dev make libxml2-dev pandoc libcurl4-openssl-dev libssl-dev  libssl-dev libcurl4-openssl-dev  libglpk-dev libgmp3-dev libxml2-dev  libssl-dev  pandoc  libpng-dev libicu-dev make pandoc libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev  libpng-dev  git libicu-dev libssl-dev make zlib1g-dev pandoc libcurl4-openssl-dev  libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev  libxml2-dev libcurl4-openssl-dev libssl-dev  libudunits2-dev libssl-dev libgdal-dev gdal-bin libgeos-dev libproj-dev libsqlite3-dev  zlib1g-dev libglpk-dev libgmp3-dev libxml2-dev  libxml2-dev pandoc  libudunits2-dev  git libgit2-dev libssl-dev make libcurl4-openssl-dev  libxml2-dev && rm -rf /var/lib/apt/lists/*
RUN mkdir -p /usr/local/lib/R/etc/ /usr/lib/R/etc/
RUN echo "options(renv.config.pak.enabled = TRUE, repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" | tee /usr/local/lib/R/etc/Rprofile.site | tee /usr/lib/R/etc/Rprofile.site
RUN R -e 'install.packages(c("renv","remotes","qdap"))'
COPY renv.lock renv.lock
RUN R -e 'renv::restore()'
